---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "Recipe R&D Notebook" } = Astro.props;
const base = import.meta.env.BASE_URL;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title} | Test Kitchen</title>
    <link rel="icon" type="image/svg+xml" href={`${base}favicon.svg`} />
    <slot name="head" />
  </head>
  <body>
    <header class="site-header">
      <div class="container">
        <nav class="nav">
          <a href={base} class="nav-brand">Test Kitchen</a>
          <ul class="nav-links">
            <li><a href={`${base}protocols/`}>Protocols</a></li>
            <li><a href={`${base}runs/`}>Runs</a></li>
            <li><a href={`${base}dishes/`}>Dishes</a></li>
            <li><a href={`${base}menus/`}>Menus</a></li>
            <li><a href={`${base}search/`}>Search</a></li>
          </ul>
        </nav>
      </div>
    </header>

    <main>
      <slot />
    </main>

    <footer class="site-footer">
      <div class="container">
        <p>Test Kitchen â€” Recipe R&D Notebook</p>
      </div>
    </footer>

    <style>
      .site-header {
        border-bottom: 1px solid var(--color-bg-elevated);
        margin-bottom: var(--space-6);
      }

      .site-footer {
        margin-top: var(--space-8);
        padding: var(--space-6) 0;
        border-top: 1px solid var(--color-bg-elevated);
        text-align: center;
        color: var(--color-text-muted);
        font-size: var(--text-caption);
      }
    </style>
  </body>
</html>

<style is:global>
  @import '../styles/global.css';
</style>

---
import BaseLayout from '../../layouts/BaseLayout.astro';
import RecipeCard from '../../components/RecipeCard.astro';
import SectionHeader from '../../components/SectionHeader.astro';
import { getCollection } from 'astro:content';
import {
  extractTitle,
  parseTags,
  groupBy,
  sortCategories,
  getProtocolStatus,
} from '../../utils/content';

const protocols = await getCollection('protocols');

// Group by category
const byCategory = groupBy(protocols, (p) => p.data.category || 'uncategorized');

// Sort categories
const sortedCategories = sortCategories(Object.keys(byCategory));

const base = import.meta.env.BASE_URL;
---

<BaseLayout title="Protocols" description="Canonical recipes - your best known methods">
  <div class="container">
    <header class="page-header">
      <h1>Protocols</h1>
      <p>Canonical recipes — your "best known" methods. What you'd share with a friend.</p>
    </header>

    {sortedCategories.map(category => (
      <section>
        <SectionHeader title={category} tag="h2" />
        <div class="card-grid">
          {byCategory[category].map(protocol => (
            <RecipeCard
              title={extractTitle(protocol.body || '', protocol.id)}
              href={`${base}protocols/${protocol.id}/`}
              category={protocol.data.category}
              tags={parseTags(protocol.data.tags)}
              version={protocol.data.version}
              status={getProtocolStatus(protocol.data.version)}
              prepTime={protocol.data['prep time']}
              cookTime={protocol.data['cook time']}
            />
          ))}
        </div>
      </section>
    ))}

    {protocols.length === 0 && (
      <div class="empty-state">
        <p>Nothing here yet — time to cook something up.</p>
      </div>
    )}
  </div>
</BaseLayout>

<style>
  .page-header {
    margin-bottom: var(--space-6);
    padding-bottom: var(--space-5);
    border-bottom: 1px solid var(--color-bg-elevated);
  }

  .page-header h1 {
    margin-bottom: var(--space-2);
  }

  .page-header p {
    color: var(--color-text-secondary);
    margin: 0;
  }

  section {
    margin-bottom: var(--space-7);
  }
</style>

---
import BaseLayout from '../../layouts/BaseLayout.astro';
import RecipeCard from '../../components/RecipeCard.astro';
import { getCollection } from 'astro:content';

const dishes = await getCollection('dishes');

function extractTitle(content: string, fallback: string): string {
  const match = content.match(/^#\s+(.+)$/m);
  return match ? match[1] : fallback;
}

const base = import.meta.env.BASE_URL;
---

<BaseLayout title="Dishes" description="Composed dishes combining multiple protocols">
  <div class="container">
    <header class="page-header">
      <h1>Dishes</h1>
      <p>Composed dishes — combine multiple protocols into a complete meal.</p>
    </header>

    <div class="card-grid">
      {dishes.map(dish => (
        <RecipeCard
          title={extractTitle(dish.body || '', dish.id)}
          href={`${base}dishes/${dish.id}/`}
        />
      ))}
    </div>

    {dishes.length === 0 && (
      <div class="empty-state">
        <p>Nothing here yet — time to cook something up.</p>
      </div>
    )}
  </div>
</BaseLayout>

<style>
  .page-header {
    margin-bottom: var(--space-6);
    padding-bottom: var(--space-5);
    border-bottom: 1px solid var(--color-bg-elevated);
  }

  .page-header h1 {
    margin-bottom: var(--space-2);
  }

  .page-header p {
    color: var(--color-text-secondary);
    margin: 0;
  }
</style>
